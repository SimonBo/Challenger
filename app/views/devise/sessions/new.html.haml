%h2 Sign in
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .row
	  .form-inputs.col-md-4.col-md-offset-2
	    = f.input :email, required: false, autofocus: true, input_html: { class: 'devise-input-limit-width' }
	    = f.input :password, required: false, input_html: { class: 'devise-input-limit-width' }
	    = f.input :remember_me, as: :boolean, input_html: { class: 'devise-input-limit-width' } if devise_mapping.rememberable?
	  .form-actions
	    = f.button :submit, "Sign in"
= render "devise/shared/links"
