.col-md-6.col-md-offset-2
	%h2 Sign up
	= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
	= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
		= f.error_notification
		.form-inputs
			= f.input :email, required: true, autofocus: true,  input_html: { class: 'width-100', value: @new_user_email  }
			= f.input :username, required: true, input_html: { class: 'width-100' }
			= f.input :password, required: true, input_html: { class: 'width-100' }
			= f.input :password_confirmation, required: true, input_html: { class: 'width-100' }
			= hidden_field_tag 'token', params[:token]
		.form-actions
			= f.button :submit, "Sign up", id: "sign_up_submit"
	= render "devise/shared/links"
