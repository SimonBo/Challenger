.col-md-6.col-md-offset-2
	%h2 Sign up
	= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
		= f.error_notification
		.form-inputs
			= f.input :email, required: true, autofocus: true, input_html: { class: 'devise-input-limit-width' }
			= f.input :username, required: true, input_html: { class: 'devise-input-limit-width' }
			= f.input :password, required: true, input_html: { class: 'devise-input-limit-width' }
			= f.input :password_confirmation, required: true, input_html: { class: 'devise-input-limit-width' }
		.form-actions
			= f.button :submit, "Sign up"
	= render "devise/shared/links"
