- if @dare.errors.any?
  #error_explanation
    = render 'errors'

- if @dare.acceptor_id == @dare.challenger_id
  %h3    
    #{@dare.challenger.username} has challenged himself to #{@dare.challenge.name} challenge!
-else
  %h3
    #{@dare.challenger.username} has challenged #{@dare.acceptor.username} to #{@dare.challenge.name} challenge!

- if @dare.rejected?
  %h2
    #{@dare.acceptor.username} has rejected the challenge:(

- else
  Started on:
  = @dare.created_at
  
  %p
    Status:
    = @dare.status
  - if @dare.times_up?
    Time for finishing this challenge has ended on
  - elsif @dare.resolved?   
    %h4
      This challenged has already finished
  - elsif @dare.voting_in_progress?
    %h4
      We are not sure whether the challenge has been accomplished, help us decide whether the proof uploaded is valid
  - else
    %br
    Finishing in:
    %time{"data-livestamp" => (@dare.created_at + 7.days).to_i}


  - if @dare.status == 'Success'
    %h4
      #{@dare.acceptor.username} has successfully accomplished the #{@dare.challenge.name} challenge!

  - elsif user_signed_in? && current_user.is_acceptor?(@dare) && @dare.still_have_time? && @dare.unresolved?
    = form_for([@dare.challenge, @dare]) do |f|
      = f.label :vid_link
      = f.text_field :vid_link
      = f.submit "Upload Youtube Video", class: "btn btn-success"


  - if @dare.utube_link?
    %h3
      Proof uploaded by #{@dare.acceptor.username}
    - @dare.utube_link.each_with_index do |vid, index|
      .embed-responsive.embed-responsive-16by9
        %iframe.embed-responsive-item{:src => "http://www.youtube.com/embed/#{vid}"}
      %br
      - if current_user.is_acceptor?(@dare)
        = link_to 'Delete proof', delete_proof_path(@dare.challenge_id, @dare, vid), method: :put
      - if current_user.is_challenger?(@dare) && @dare.proof_not_validated? && @dare.unresolved?
        = link_to 'Accept proof', accept_proof_path(@dare.challenge_id, @dare.id), method: :put
        = link_to 'Reject proof', reject_proof_path(@dare.challenge_id, @dare.id), method: :put
  


  - if @dare.voting_in_progress?
    = render 'voting'

  - if @dare.after_voting?
    = render 'voting_result'
