%h2= @user.username
%h3= @user.email

%h4
	= @user.username 
	has accepted:
	= pluralize @user.accepted_dares.count, 'challenge'

- @user.accepted_dares.each do |dare|
	%p
		= link_to dare.challenge.name, challenge_dare_path(challenge_id: dare.challenge.id, id: dare.id)


%h4 
	= @user.username 
	has challenged:
	= pluralize @challenged_users.count, 'user'

- @challenged_users.each do |i|
	%p
		= link_to i.acceptor.username, i.acceptor

%h4
	= @user.username 
	has completed:
	= pluralize @user.completed_challanges.count, 'challenge'

- @user.completed_challanges.each do |completed_challenge|
	%p
		= link_to completed_challenge.challenge.name, challenge_dare_path(challenge_id: completed_challenge.challenge.id, id: completed_challenge.id)

%h4
	= @user.username 
	has failed at:
	= pluralize @user.failed_challenges.count, 'challenge'

- @user.failed_challenges.each do |failed_challenge|
	%p
		= link_to failed_challenge.challenge.name, user_path(failed_challenge)

%h4
	= @user.username 
	has rejected:
	= pluralize @user.rejected_challenges.count, 'challenge'

- @user.rejected_challenges.each do |rejected_challenge|
	%p
		= link_to rejected_challenge.challenge.name, rejected_challenge.challenge