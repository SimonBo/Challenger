- if user_signed_in?
  = current_user.username
  = link_to 'Edit account', edit_user_registration_path
  = link_to 'Sign out', destroy_user_session_path, :method=>'delete'

  %h3 Accepted Challenges:
  - current_user.accepted_dares.each do |i|
    %p
      = link_to i.challenge.name, i.challenge
      finishes
      %time{"data-livestamp" => (i.created_at + 7.days).to_i}

  %h3 You have challenged:
  - @challenged.each do |i|
    %p
      = link_to i.acceptor.username
      to 
      = link_to "#{i.challenge.name},", i.challenge
      finishes 
      %time{"data-livestamp" => (i.created_at + 7.days).to_i}

  = link_to 'New Challenge', new_challenge_path


- else
  = link_to new_user_session_path do
    %button.btn.btn-sm.btn-default Sign in
  = link_to new_user_registration_path do
    %button.btn.btn-sm.btn-default Sign up

 